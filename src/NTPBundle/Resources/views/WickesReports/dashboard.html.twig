{% extends 'NTPBundle::base.html.twig' %}
{% block body %}
    {% if report %}            
        <br/>
        <div class="row">
            <div class="col-md-4">
                <div class="row">
                    <div class="col-md-5">
                        {{ form_start(form) }}
                        {{ form_errors(form) }}
                        {{ form_row(form.planDate) }}
                        {{ form_row(form.submit) }}
                        {{ form_end(form) }}</div>
                    <div class="col-md-7">
                    </div>
                </div>
                <div class="col-md-8">
                </div>    
              
    {% else %}
        <div class="row">
            <div class="col-md-2">
                {{ form_start(form) }}
                {{ form_errors(form) }}
                {{ form_row(form.planDate) }}
                {{ form_row(form.submit) }}
                {{ form_end(form) }}</div>
            <br/>
            <div class="col-md12">
                 {% if message %}
                     <h5><b>{{ message }}</b></h5>
                 {% endif %}    

            </div>
        </div>
    {% endif %}
{% endblock %}
